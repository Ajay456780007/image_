from PIL import Image, ImageDraw, ImageFont

# All your texts
lines = [
    "Text after lowercasing: g***mala thala tucker doi!!!! film blockbuster!!",
    "Text after removing stopwords: g***mala thala tucker doi!!!! film blockbuster!!",
    "Text after removing emails: g***mala thala tucker doi!!!! film blockbuster!!",
    "Text after removing emojis: g***mala thala tucker doi!!!! film blockbuster!!",
    "Text after removing punctuations: gmala thala tucker doi film blockbuster"
]

# Load professional fonts (make sure you have these TTF files on your system)
font_regular = ImageFont.truetype("arial.ttf", 36)
font_bold = ImageFont.truetype("arialbd.ttf", 36)  # bold version

# Pre-calculate image size
line_spacing = 15
text_height = font_regular.getbbox("Hg")[3] - font_regular.getbbox("Hg")[1]

# Estimate max width
max_width = 0
for line in lines:
    prefix, _, suffix = line.partition(":")
    prefix += ":"
    width = font_bold.getlength(prefix) + font_regular.getlength(suffix)
    max_width = max(max_width, width)

img_width = int(max_width + 100)
img_height = int((text_height + line_spacing) * len(lines) + 100)

# Create white background image
img = Image.new("RGB", (img_width, img_height), "white")
draw = ImageDraw.Draw(img)

# Draw each line
y = 50
for line in lines:
    prefix, _, suffix = line.partition(":")
    prefix += ":"

    # Draw bold prefix
    draw.text((50, y), prefix, font=font_bold, fill="black")
    x_offset = 50 + font_bold.getlength(prefix)

    # Draw normal suffix
    draw.text((x_offset + 10, y), suffix.strip(), font=font_regular, fill="black")

    y += text_height + line_spacing

# Save high-quality image
img.save("professional_text_bold.png", dpi=(300, 300))

# Show preview
img.show()
